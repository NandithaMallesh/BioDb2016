    "def mend_first_law(k, m, n):    \n",
    "    c = k + m + n    \n",
    "    p1 = n/c * (0.5 * m / (c - 1) + (n - 1) / (c - 1)) \n",
    "    p2 = 0.5 * m/c * (0.5 * (m - 1) / (c - 1) + n / (c - 1)) \n",
    "    return 1 - (p1 + p2)\n",
    "\n",
    "print (mend_first_law(2,2,2))"
   ]
